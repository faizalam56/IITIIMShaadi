<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.senzecit.iitiimshaadi.activity.SubscriberDashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.senzecit.iitiimshaadi.activity.SubscriberDashboardActivity">

        // HEADER
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#d87570"
            android:weightSum="10">
            // Profile Progress
            <LinearLayout
                android:id="@+id/layoutTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorMaroon"
                android:gravity="left"
                android:paddingBottom="8dp"
                android:orientation="vertical"
                android:layout_weight="3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:id="@+id/idprogress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/profile_circle_shape"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="60"
                        android:progressDrawable="@drawable/profile_circular_progress_bar" />

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="0dp">
                        <com.senzecit.iitiimshaadi.utils.CircleImageView
                            android:id="@+id/idProfileCIV"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/profile_img"
                            android:background="@android:color/transparent"
                            />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/idUserNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/idprogress"
                        android:layout_centerHorizontal="true"
                        android:text="\@bhar"
                        android:textColor="@color/colorWhite"
                        />
                    <TextView
                        android:id="@+id/idUserId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/idUserNameTV"
                        android:layout_centerHorizontal="true"
                        android:text="\@30067"
                        android:textColor="@color/colorWhite"/>

                   <!-- <TextView
                        android:id="@+id/idUserIdTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/idUserNameTV"
                        android:layout_centerHorizontal="true"
                        android:text="\@30067"
                        android:textColor="@color/colorWhite"
                        />-->
                </RelativeLayout>

            </LinearLayout>
            //Text Percentage
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorMaroon"
                android:layout_marginRight="1dp"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/idProfilePercTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60%"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>
            //Camera
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorMaroon"
                android:layout_marginRight="1dp"
                android:layout_weight="2.5">
                <ImageView
                    android:id="@+id/idAlbum"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_camera"
                    android:layout_margin="4dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Album"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>
            //Button List
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorMaroon"
                android:padding="8dp"
                android:layout_weight="2.5">
                <TextView
                    android:id="@+id/idMyProfileTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>

        </LinearLayout>

        // OPTION-TWO
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            //FIRST
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:gravity="center">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interests \nReceived"
                            android:textColor="@color/colorBlack"
                            />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0)"
                            android:textColor="@color/colorBlack"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/idProfileShowTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile Show"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorMaroon"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            //SECOND
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:gravity="center">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat/Message Received"
                            android:textColor="@color/colorBlack"
                            />
                        <TextView
                            android:layout_marginLeft="5dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0)"
                            android:textColor="@color/colorBlack"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/idShowMessageTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Show Message"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorMaroon"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        //TOPIC
        //1
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/idFriendsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //2
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/idSearchPartnerTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Search Partner"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //3
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/idPremServicesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Premier Services"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //4
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/idChatMessageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Chat/Message"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //5
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/idSubscriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Subscription"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //6
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/idCustFolderTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Custom Folder"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //7
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/idWalletTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Wallet"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //8
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/idUploadVideoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Upload Video"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
        //9
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/idReferFrndTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Refer a Friend"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>