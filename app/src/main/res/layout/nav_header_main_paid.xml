<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:weightSum="10">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/logo_main" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <!--<ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />-->

            <TextView
                android:id="@+id/idAboutNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarkYellow"
                />-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />

            <TextView
                android:id="@+id/idMediaCoverageNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media Coverage"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />


            <TextView
                android:id="@+id/idSuccessStoryNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Success Stories"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />

            <TextView
                android:id="@+id/idHowToNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Navigate"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />

            <TextView
                android:id="@+id/idPrivacyPolicyNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />

            <TextView
                android:id="@+id/idContactUsNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />
            <TextView
                android:id="@+id/idFAQNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQs"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />
            <TextView
                android:id="@+id/idDisclaimerNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disclaimer"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />

            <TextView
                android:id="@+id/idSettingNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />
            <TextView
                android:id="@+id/idLogoutNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/side_line"
                />

        </LinearLayout>

</LinearLayout>
