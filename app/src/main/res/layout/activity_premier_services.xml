    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/idToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.73">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/premier_services_new" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".27"
            android:layout_gravity="bottom"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMaroon"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Handled by Directors Themselves"
                    android:textSize="12sp"
                    android:textColor="@color/colorLightWhite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Single Window: Taksh Gupta, CEO, +91-9811199800, 9 AM to 9 PM- 7 days a week. Mail: taksh@iitiimshaadi.com"
                    android:textSize="12sp"
                    android:textColor="@color/colorLightWhite"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>
