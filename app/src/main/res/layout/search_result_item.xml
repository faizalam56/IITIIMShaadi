<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".27"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/idSearchpartnerIV"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/profile_img2"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Viewed On: 20-11-2017"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight=".73"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ashish Kapoor"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>-->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Diet"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Non Vegetarian"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Employment"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Consultant"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Deloitee Consulting US India Pvt Ltd."
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5ft 10in(177cm)"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Religion"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hindu/khatri"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MBA,IIM Lucknow,2015,B.E(InformationTechnology),NSIT,DU,2011"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:id="@+id/detailsBtn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_searchresult_action_selector"
            android:textColor="@color/colorMaroon"
            android:text="Add as Friend"
            android:textAllCaps="false"/>
        <!--<Button
            android:id="@+id/partnerPrefBtn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_searchresult_action_selector"
            android:textColor="@color/colorMaroon"
            android:text="Chat Offline"
            android:textAllCaps="false"/>-->
        <Button
            android:id="@+id/albumsBtm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_searchresult_action_selector"
            android:textColor="@color/colorMaroon"
            android:text="Move To"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>