<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senzecit.iitiimshaadi.activity.AlbumActivity">

    <include layout="@layout/app_toolbar"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/idAlbumNoImageFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/idAddBtnLL"
                android:gravity="center"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@drawable/button_register_selector">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/album1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:textSize="18sp"
                    android:textColor="@color/colorMaroon"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:visibility="visible"
        android:id="@+id/idAlbumImageFoundFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/colorEditBox">

                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:columnWidth="110dp"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform"
                    android:verticalSpacing="5dp"
                    >
                </GridView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idAddImgLL"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@drawable/button_register_selector"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/album1"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo"
                    android:textSize="18sp"
                    android:textColor="@color/colorMaroon"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
