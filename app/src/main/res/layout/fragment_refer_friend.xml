<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_below="@+id/idToolbar"
        android:id="@+id/srollViewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            >

            <RelativeLayout
                android:background="@color/colorMaroon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp">
                <FrameLayout
                    android:id="@+id/referFreindFL"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="30dp">
                    <ImageView
                    android:id="@+id/searchProfileIdIV"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/arrow_down_white"/>
                </FrameLayout>

            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/referFriendDetailsLL"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friend's Email"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="normal"/>

                    <EditText
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel1"
                        android:hint="Friend's Email"
                        android:inputType="textEmailAddress"/>

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add multiple emails by comma separated"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="normal"/>
                    <Button
                        android:id="@+id/continueBtn"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_register_selector"
                        android:textColor="@color/colorMaroon"
                        android:text="Send Referral Mail"
                        android:textSize="16sp"
                        android:textAllCaps="false"/>

                    <View
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorOffGrey"/>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refer_friend_description"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="normal"/>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refer_terms_conditions"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="normal"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

           <!-- <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.CardView>-->

        </LinearLayout>

    </ScrollView>
</LinearLayout>